<script>
$('.message').fadeOut(0);
setTimeout("$( '#message' ).fadeOut(4000)",100)
</script>

<section class="bg-primary" id="about">
<main role="main" class="container">
      <div class="jumbotron">

<div class="ui three column centered grid">
  <form class="ui form">
    <div class="field">

    <div class="ui top attached label">Course Information</div>
    
    <% if flash[:notice] %>
    <div id="message"><%= notice%></div>
    <%end%>

    <br><br>
   
    <%= form_for @course do |form| %>
    <%= form.text_field :name, value:"Name: "+ @course.name %>
    </div>
    <div class="field">
    <%= form.text_field :time, value:"Hours: " + @course.time.to_s %>
    </div>
    <%=link_to "Edit", edit_course_path(@course), :class=> "ui inverted orange button", data: { turbolinks: false }%>
    <%= link_to  "Courses", courses_path(@courses),  class:"ui inverted orange button" %>
    <%end%>
  </div>
  </div>
</div>

</div>
    </main>
    </section>
