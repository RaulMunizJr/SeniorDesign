

<section class="bg-primary" id="about">
<main role="main" class="container">
      <div class="jumbotron">

<script>
$('.message').fadeOut(0);
setTimeout("$( '#message' ).fadeOut(4000)",100)
</script>


<div class="ui three column centered grid">
  <form class="ui form">
    <div class="field">
    <div class="ui top attached label">Student Information</div>

    <% if flash[:notice] %>
    <div id="message"><%= notice%></div>
    <%end%>

    <br><br>
    <%= form_for @student do |form| %>
    <%= form.text_field :first_name, value:"First name: "+ @student.first_name %>
    </div>
    <div class="field">
    <%= form.text_field :last_name, value:"Last name: " + @student.last_name %>
    </div>

    <div class="field">
    <%= form.text_field :classification, value:"Classification: " + @student.classification.to_s %>
    </div>
      
    <div class="field">
    <%= form.text_field :major, value:"Major: " + @student.major%>
    </div>

    <div class="field">
    <%= form.text_field :email, value:"Email: " + @student.email%>
    </div>

    <%=link_to "Edit", edit_student_path(@student), :class=> "ui inverted orange button", data: { turbolinks: false }%>
    <%= link_to  "Students", students_path(@students),  class:"ui inverted orange button" %>
    
    <%end%>
  </div>
  </div>
</div>

</div>
    </main>
    </section>